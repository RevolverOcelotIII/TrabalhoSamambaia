<resources>
    <!-- Base application theme. -->

    <style name="Theme.TrabalhoSamambaia" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/register_button_garden</item>
        <item name="colorPrimaryVariant">@color/register_button_garden</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">#000</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TrabalhoSamambaia.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TrabalhoSamambaia.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.GardenActivityStyle" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="Theme.splash_screen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/register_button_garden</item>
        <item name="android:background">@color/register_button_garden</item>
    </style>
    <style name="CardShape" parent="">
        <item name="cornerSizeBottomLeft">15dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeTopRight">15dp</item>
    </style>
    <style name="CarouselShape" parent="">
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>

    </style>
</resources>