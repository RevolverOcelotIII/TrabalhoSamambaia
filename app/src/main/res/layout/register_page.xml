<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_background_color"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/app_shape_topbar"
        android:layout_width="329dp"
        android:layout_height="281dp"
        android:background="@drawable/shape_topbar"
        android:contentDescription="shape_top_bar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="-16dp" />

    <ImageView
        android:id="@+id/holding_plant"
        android:layout_width="298dp"
        android:layout_height="214dp"
        android:background="@drawable/holding_plant"
        android:contentDescription="holding_plant"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="69dp" />

    <ImageView
        android:id="@+id/app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/app_title"
        android:contentDescription="app_title"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="312dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="419dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_email" />

        <EditText
            android:layout_width="223dp"
            android:layout_height="match_parent"
            android:text="jeo@gmail.com" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="94dp"
        tools:layout_editor_absoluteY="471dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/password_icon" />

        <EditText
            android:layout_width="221dp"
            android:layout_height="match_parent"
            android:text="Senha" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>